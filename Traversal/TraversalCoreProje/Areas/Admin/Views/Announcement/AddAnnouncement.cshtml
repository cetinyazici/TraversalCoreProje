@model AnnouncementAddDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="text-center">Duyuru Ekleme Sayfası</h1>
<form method="post">
    <div class="form-group">
        @Html.Label("Duyuru Başlığı")
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Duyuru İçeriği")
        <input type="text" asp-for="Content" class="form-control" />
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <br />
    <button class="btn btn-outline-dark">Oluştur</button>
</form>