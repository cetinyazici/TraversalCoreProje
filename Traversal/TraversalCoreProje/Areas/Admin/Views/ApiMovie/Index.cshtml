@model List<ApiMovieViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="text-center">ApiMovie Film Listesi</h1>
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>FİLM ADI</th>
        <th>FRAGMAN</th>
        <th>IMDB PUANI</th>
        <th>YAPIM YILI</th>
        <th>GÖRSEL</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.rank</th>
            <td>@item.title</td>
            <td>@item.description</td>
            <td>@item.rating</td>
            <td>@item.year</td>
            <td>
                <img src="@item.image" style="width:85px" />
            </td>       
        </tr>
    }
</table>