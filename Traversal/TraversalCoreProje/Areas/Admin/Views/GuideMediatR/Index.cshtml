@model List<GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="text-center">CQRS MediatR Rehber Listesi</h1>
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>İSİM</th>
        <th>AÇIKLAMA</th>
        <th>RESİM</th>
        <th>DURUM</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.GuideId</th>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                <img src="@item.Image" style="width:60px"/>
            </td>
            <td>
                @if (item.Status)
                {
                    <button class="btn btn-success">Aktif</button>
                }
                else
                {
                    <button class="btn btn-secondary">Pasif</button>
                }
            </td>

            <td><a href="/Admin/GuideMediatR/DeleteGuide/@item.GuideId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/GuideMediatR/GetGuide/@item.GuideId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Admin/GuideMediatR/AddGuide" class="btn btn-outline-primary">Yeni MediatR Rehber Ekle</a>
