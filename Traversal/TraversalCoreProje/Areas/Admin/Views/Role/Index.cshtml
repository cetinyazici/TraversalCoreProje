@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<h1 class="text-center">Rol Listesi</h1>
@if (Model.Count > 0)
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>#</th>
            <th>Rol Adı</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-success">
        <span>Herhangi Bir Rol Bulunamadı</span>
    </div>
}
<a href="/Admin/Role/CreateRole/" class="btn btn-outline-primary">Yeni Rol Ekle</a>