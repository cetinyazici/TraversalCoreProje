@model VisitorViewModel
@{
    ViewData["Title"] = "AddVisitorApi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">VisitorApi Ziyaretçi Ekleme Sayfası</h1>
<form method="post">
    <div class="form-group">
        @Html.Label("İsim")
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Soyisim")
        <input type="text" asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Şehir")
        <input type="text" asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Mail")
        <input type="text" asp-for="Mail" class="form-control" />
        <span asp-validation-for="Mail" class="text-danger"></span>
    </div>
    <br />
    <button class="btn btn-outline-dark">Oluştur</button>
</form>