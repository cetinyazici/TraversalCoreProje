@model List<VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="text-center">VisitorApi Ziyaretçi Listesi</h1>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>İSİM</th>
        <th>SOYİSİM</th>
        <th>ŞEHİR</th>
        <th>MAİL</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.VisitorID</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td>@item.Mail</td>
            <td><a href="/Admin/VisitorApi/DeleteVisitorApi/@item.VisitorID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/VisitorApi/UpdateVisitor/@item.VisitorID" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Admin/VisitorApi/AddVisitorApi" class="btn btn-outline-dark">Yeni Ziyaretçi Ekle</a>