@model List<Reservation>
@{
    ViewData["Title"] = "MyOldReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1 class="text-center">Geçmiş Rezervasyonlarım</h1>
@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Lokasyon</th>
            <th>Kişi Sayısı</th>
            <th>Rezervason Tarihi</th>
            <th>Durum</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ReservationId</td>
                <td>@item.Destination.City</td>
                <td>@item.PersonCount</td>
                <td>@item.ReservationDate.ToShortDateString()</td>
                <td>@item.Status</td>
            </tr>
        }
    </table>
}
else
{
    <h2 class="text-danger">Geçmiş randevunuz bulunmamaktadır.</h2>
}