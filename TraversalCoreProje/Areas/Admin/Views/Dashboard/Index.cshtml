    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        @await Component.InvokeAsync("_DashboardBanner")
        @await Component.InvokeAsync("_Cards1Statistic")
        
        <!-- Total Revenue -->
        @await Component.InvokeAsync("_TotalRevenue")
        <!--/ Total Revenue -->
        @await Component.InvokeAsync("_Cards2Statistic")
    </div>
    <div class="row">
        <!-- Order Statistics -->
        @await Component.InvokeAsync("_DestinationStatistic")
        <!--/ Order Statistics -->
        <!-- Expense Overview -->
        @await Component.InvokeAsync("_GuideList")
        
        <!--/ Expense Overview -->
        <!-- Transactions -->
        @await Component.InvokeAsync("_DestinationStatistic2")
        <!--/ Transactions -->
    </div>
</div>
@await Component.InvokeAsync("_Scripts")
