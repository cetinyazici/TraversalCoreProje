@model UserRegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Traversal Rezervasyon - Kayıt Ekranı</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords"
          content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
</head>

<body>
    <!-- /login-section -->
    <section class="w3l-login-6">
        <div class="login-hny">
            <div class="form-content">
                <div class="form-right">
                    <div class="overlay">
                        <div class="grid-info-form">
                            <h5>Traversal Rezervasyon </h5>
                            <h3>Hesap Oluşturun</h3>
                            <p>
                                Birbirinden deneyimli rehberlerimiz eşliğinde İskandinav ülkelerinin soğuğunu,
                                Akdeniz ülkelerinin sıcaklığını, güzel ülkemizin Kapadokya'dan Sürmene'ye,
                                Ölüdeniz'den Asos'a, Balkan Turundan Mısır Çöllerine kadar aklınıza gelen her yere bir tık uzaktayız.
                                Seyahatlerimize katılmak için hemen kayıt olun...
                            </p>
                            <a href="/Login/SignIn" class="read-more-1 btn">Hadi başlayalım</a>
                        </div>

                    </div>
                </div>
                <div class="form-left">
                    <div class="middle">
                        <h4>Bize Katılın</h4>
                        <p>Hemen ücretsiz hesap oluşturun :)</p>
                    </div>
                    <form method="post" class="signin-form">
                        <div style="color:red" asp-validation-summary="All"></div>
                        <div class="form-input">
                            <label>Adınız</label>
                            <input type="text" asp-for="Name" />
                        </div>
                        <div class="form-input">
                            <label>Soyadınız</label>
                            <input type="text" asp-for="Surname" />
                        </div>
                        <div class="form-input">
                            <label>Kullanıcı Adınız</label>
                            <input type="text" asp-for="UserName" />
                        </div>
                        <div class="form-input">
                            <label>Mail Adresiniz</label>
                            <input type="email" asp-for="Mail" />
                        </div>
                        <div class="form-input">
                            <label>Şifreniz</label>
                            <input type="password" asp-for="Password" />
                        </div>
                        <div class="form-input">
                            <label>Şİfre Tekrar</label>
                            <input type="password" asp-for="ConfirmPassword" />
                        </div>
                        <label class="container">
                            Kullanım <a href="#">Koşullarını</a> ve <a href="#">Gizlilik'i</a> kabul ediyorum.
                            <input type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                        <button class="btn">Hesap Oluştur</button>
                    </form>
                    <div class="copy-right text-center">
                        <p>
                            ©@DateTime.Now.Year Traversal Kayıt. Her hakkı saklıdır | Design by
                            <a href="https://www.linkedin.com/in/cetinyazici/" target="_blank">ÇetinYazıcı</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>